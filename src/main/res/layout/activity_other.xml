<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >

    <com.hzn.easypickerview.EasyPickerView
        android:id="@+id/epv"
        android:layout_width="344dp"
        android:layout_height="438dp"
        android:layout_centerInParent="true"
        android:background="@mipmap/b_temp_left_bg"


        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        custom:epvMaxShowNum="5"
        custom:epvRecycleMode="true"
        custom:epvTextMaxScale="1.5"
        custom:epvTextColor="#FFF"
        custom:epvTextMinAlpha="0.35"
        custom:epvTextPadding="50dp"
        custom:epvTextSize="30sp"
        />



</RelativeLayout>